<?xml version="1.0" encoding="UTF-8"?>

<plugin>
	<class>org.tttalk.openfire.plugin.TTTalkUserBatchPlugin</class>

	<name>TTTalk User Create/Delete</name>
	<description>Create/Delete user accounts</description>
	<author>tttalk.org</author>
	<version>1.0.0</version>
	<date>03/05/2015</date>
	<minServerVersion>3.9.0</minServerVersion>

	<adminconsole>
		<tab id="tab-users">
			<sidebar id="tttalk" name="TTTalk">
				<item id="tttalk-create" name="TTTalk User Create" url="create-users.jsp"
					description="Create Openfire user batchly." />
			</sidebar>
			<sidebar id="tttalk" name="TTTalk">
				<item id="tttalk-delete" name="TTTalk User Delete" url="delete-users.jsp"
					description="Delete Openfire user batchly." />
			</sidebar>
			<sidebar id="tttalk" name="TTTalk">
				<item id="tttalk-group-create" name="TTTalk Group Create" url="create-groups.jsp"
					description="Create Openfire group batchly." />
			</sidebar>
			<sidebar id="tttalk" name="TTTalk">
				<item id="tttalk-group-delete" name="TTTalk Group Delete" url="delete-groups.jsp"
					description="Delete Openfire group batchly." />
			</sidebar>
			<sidebar id="tttalk" name="TTTalk">
				<item id="tttalk-group-members" name="TTTalk Group Members" url="manage-group-members.jsp"
					description="Manage Openfire group members." />
			</sidebar>
		</tab>
	</adminconsole>
</plugin>
